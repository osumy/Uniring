<main class="card" id="registerCard">
    <header class="card-header">
        <h1 class="card-title">ثبت نام</h1>
        <p class="card-description">لطفا اطلاعات خود را وارد کنید.</p>
    </header>

    <!-- POST to the same controller action Signup (AccountController.Signup) -->
    <form asp-action="Signup" asp-controller="Account" method="post" class="register-form" novalidate>

        <div class="form-row">
            <label class="sr-only" for="UserName">نام کاربری</label>
            <input id="UserName" name="DisplayName" class="input" type="text" placeholder="نام کاربری"
                   autocomplete="username" inputmode="text" required />
        </div>

        <div class="form-row">
            <label class="sr-only" for="PhoneNumber">شماره موبایل</label>
            <input id="PhoneNumber" name="PhoneNumber" class="input" type="tel" placeholder="شماره موبایل"
                   autocomplete="tel" inputmode="tel" required />
        </div>

        <div class="form-row">
            <label class="sr-only" for="Password">رمز عبور</label>
            <input id="Password" name="Password" class="input" type="password" placeholder="رمز عبور"
                   autocomplete="new-password" required />
        </div>

        <div class="form-row">
            <label class="sr-only" for="ConfirmPassword">تکرار رمز عبور</label>
            <input id="ConfirmPassword" name="ConfirmPassword" class="input" type="password"
                   placeholder="تکرار رمز عبور" autocomplete="new-password" required />
        </div>

        <div class="form-actions">
            <button id="submitBtn" type="submit" class="btn-primary">ثبت نام</button>
        </div>

        <!-- Error container: server-side ModelState / API errors will render here -->
        <div id="error-row" aria-live="polite" class="error-row" style="color:crimson;">
@*             @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="validation-summary"></div>
            }
            else if (TempData["ApiErrors"] is List<string> apiErrors)
            {
                foreach (var err in apiErrors)
                {
                    <p>*خطا: @err</p>
                }
            } *@
        </div>

        <div class="helper-row">
            <a class="link-secondary" href="login">از قبل حساب کاربری دارید؟</a>

            <div class="lang-wrapper">
                <button type="button" id="langButton" class="btn-lang"
                        onclick="location.href='signup-ar'">
                    العربية
                </button>
            </div>
        </div>
    </form>
</main>
